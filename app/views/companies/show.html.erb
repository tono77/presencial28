<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @company.name %>
</p>


<%= form_with(model: [@company, Employee.new], local: true) do |form| %>
	
	<%= form.hidden_field :company_id, value: @company.id %>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, id: :first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, id: :last_name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :email %>
  </div>

  <div class="field">
    <%= form.label :area_id %>
    <%= form.collection_select :area_id, Area.all, :id, :name %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<h1>Empleados</h1>
<ul>
<% @company.employees.each do |employee|  %>
    <%= employee.first_name %> 
<% end  %>
</ul>
<%= link_to 'Edit', edit_company_path(@company) %> |
<%= link_to 'Back', companies_path %>
